_  = require 'underscore'
ko = require 'knockout'

{ compareIds, OrderedSet, formatters,
} = require '../util'
{ Model,
} = require '../base'
{ Graph,
} = require '../graph/graph-model'

class exports.DashboardTab extends Model
    
    /**
     * @constructor
     */
    -> super ...
    
    
    defaults: ->
        name        : ''
        graphs      : []
    
    attributeTypes: ->
        graphs      : Graph
    
    
    canonicalize : (data) ->
        data.graphs = _.map data.graph_ids, (id) -> {id}
        delete data.graph_ids
        data
    
    
    /**
     * Inform sub-objects its safe to begin their watchers.
     */
    watching: @computed ->
        # console.log "#this.watching!"
        @isWatching = true
        @graphs()
        ko.dependencyDetection.ignore ~>
            _.invoke @graphs(), 'watching'
    
    
    toJSON: ->
        attrs = @toJS _.omit @attributes, 'graphs'
        attrs.graph_ids = _.map @attributes.graphs.peek(), -> it.id.peek()
        attrs
    

