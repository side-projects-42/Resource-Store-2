- if (!locals.version) locals.version = 'HEAD';
- if (version == null || !version || version === 'HEAD'){ locals.version = String(+new Date); }

mixin css(href, media, root, cssClasses)
    - var ver
    - root  = root || (href.charAt(0) === '/' ? locals.mount : locals.path.join(locals.mount, 'css'))
    - ver   = (locals.version ? (href.indexOf('?') === -1 ? '?' : '&')+locals.version : '')
    - href  = locals.path.join(root, href) + ver
    link(rel='stylesheet', type='text/css', href=href, media=media, class=cssClasses)


