{
  "name": "wsexport/tool",
  "description": "Tool to extract Wikisource books",
  "keywords": [
    "wikisource"
  ],
  "homepage": "https://github.com/wsexport/tool",
  "license": "GPL-2.0-or-later",
  "authors": [],
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.2.5",
    "ext-ctype": "*",
    "ext-dom": "*",
    "ext-iconv": "*",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-libxml": "*",
    "ext-mbstring": "*",
    "ext-pdo": "*",
    "ext-sqlite3": "*",
    "ext-zip": "*",
    "composer/package-versions-deprecated": "^1.11",
    "doctrine/annotations": "^1.10",
    "doctrine/doctrine-bundle": "^2.1",
    "doctrine/doctrine-migrations-bundle": "^3.0",
    "doctrine/orm": "^2.8",
    "guzzlehttp/guzzle": "^6.0",
    "kevinrob/guzzle-cache-middleware": "^3.3",
    "symfony/dotenv": "5.1.*",
    "symfony/flex": "^1.3.1",
    "symfony/framework-bundle": "5.1.*",
    "symfony/mailer": "5.1.*",
    "symfony/monolog-bundle": "^3.6",
    "symfony/process": "5.1.*",
    "symfony/stopwatch": "5.1.*",
    "symfony/yaml": "5.1.*",
    "twig/extra-bundle": "^2.12 || ^3.0",
    "twig/twig": "^2.12 || ^3.0",
    "wikimedia/html-formatter": "^1.0",
    "wikimedia/toolforge-bundle": "^1.3"
  },
  "require-dev": {
    "dama/doctrine-test-bundle": "^6.5",
    "mediawiki/mediawiki-codesniffer": "^v34.0",
    "mediawiki/minus-x": "^1.0",
    "phan/phan": "^4.0",
    "symfony/browser-kit": "5.1.*",
    "symfony/css-selector": "5.1.*",
    "symfony/maker-bundle": "^1.25",
    "symfony/phpunit-bridge": "^5.1",
    "symfony/web-profiler-bundle": "5.1.*"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    },
    "platform": {
      "php": "7.3"
    },
    "sort-packages": true
  },
  "replace": {
    "paragonie/random_compat": "2.*",
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php72": "*",
    "symfony/polyfill-php71": "*",
    "symfony/polyfill-php70": "*",
    "symfony/polyfill-php56": "*"
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ],
    "test": [
      "composer validate",
      "phpcs -s .",
      "./bin/console lint:twig ./templates",
      "./bin/console lint:yaml ./config",
      "minus-x check .",
      "phan --allow-polyfill-parser --load-baseline=./.phan/baseline.php"
    ],
    "fix": [
      "phpcbf"
    ]
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "extra": {
    "symfony": {
      "allow-contrib": false,
      "require": "5.1.*"
    }
  }
}
