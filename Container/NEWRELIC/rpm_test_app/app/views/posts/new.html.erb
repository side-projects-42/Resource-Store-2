<h2>New Post</h2>
<h3><%= @blog.title %></h3>

<p>Note: Metrics for the create are ignored. </p>
<% form_for(@post, :url => blog_posts_url) do |f| %>
  <%= f.hidden_field :blog_id %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', blog_posts_path %>
