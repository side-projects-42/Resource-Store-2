<%= form_for event do |f| %>
<p class="formy">
  <%= f.label :name %>
  <%= f.text_field :name %>
  <% if event.errors.any? %>
  <span class="error_details">
    <%= "Name " + event.errors[:name].join + "." %>
  </span>
  <% end %>
</p>
<p class="formy">
  <%= f.label "Start Date" %>
  <%= f.date_field :start_date, data:{ provide:'datepicker' } %>
</p>
<p class="formy">
  <%= f.label "End Date" %>
  <%= f.date_field :end_date, data:{ provide:'datepicker' } %>
</p>
<p class="formy">
  <%= f.label :location %>
  <%= f.text_field :location %>
</p>

<p><%= f.submit "Submit", class: "btn btn-success" %></p>
<% end %>