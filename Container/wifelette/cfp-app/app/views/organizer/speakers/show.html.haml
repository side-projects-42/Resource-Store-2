= link_to(organizer_event_proposal_path(speaker.proposal.event, speaker.proposal),
              class: "btn btn-primary", id: "back") do

  &laquo; Return to Proposal

#speaker
  .row
    .col-md-12
      %h1 Speaker Profile
      .toolbox.pull-right
        .clearfix
          = speaker.delete_button

          = link_to(edit_organizer_event_speaker_path,
            class: "btn btn-primary") do
            Edit Speaker

  .row
    .col-md-12
      %p
        = image_tag("http://www.gravatar.com/avatar/#{speaker.gravatar_hash}?s=150",
          id: 'speaker_gravatar')
        %br
        %b Name:
        %br
        = speaker.name
      %p
        %b Email:
        %br
        = mail_to(speaker.email)
      %p
        %b Bio:
        %br
        = speaker.person.bio

      %p
        %b GitHub:
        %br
        = speaker.github

      %p
        %b Twitter:
        %br
        = speaker.twitter

      %p
        %b Past Speaking Experience:
        %br
        = speaker.speaking_experience

      %p
        %b Location:
        %br
        = speaker.location
