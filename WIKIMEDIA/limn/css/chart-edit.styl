.box
    position: absolute
    margin: 1em
    top: 0
    right: 0
    bottom: 0
    left: 0

.flying
    box-shadow: 3px 3px 3px 3px #bbb
    padding: 10px
    p
        font-size: 16px
    > div
        position: relative
        height: 100%
        width: 100%

.left.box
    top: -20%
    right: 100%
    left: -20%
.top.box
    left: 0
    top: -20%
    bottom: 100%
.right.box
    top: 20%
    bottom: 20%
    right: -20%
    left: 100%
.bottom.box
    top: 100%
    bottom: -20%
    left: 20%

