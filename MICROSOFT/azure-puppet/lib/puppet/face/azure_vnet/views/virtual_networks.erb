<%="Listing virtual networks".bold%>
<%index=1%>
<%vnets.each do |vnet|%>

  <%="Virtual Network: #{index}".bold%>
    <%="Server Name".fix(20)%>: <%=vnet.name %>
    <%="Address Space".fix(20)%>: <%=vnet.address_space.join(", ")%>

    <%="Subnets"%>:             <%="Name".fix.bold%><%="Address Prefix".fix.bold%>
                         <%vnet.subnets.each do |endpoint|%><%=endpoint[:name].fix%><%=endpoint[:address_prefix].to_s.fix%>
           		 <%end%>
    <%="Dns Servers"%>:         <%="Name".fix.bold%><%="Ip Address".fix.bold%>
                         <%vnet.dns_servers.each do |endpoint|%><%=endpoint[:name].fix%><%=endpoint[:ip_address].to_s.fix%>
           		 <%end%>   <%index+=1%><%end%>
