        <Stream name="RequiredFeatures/{{name}}/1.0" />
        <Stream name="SupportedOSes/{{name}}/1.0" />
        <Stream name="SupportData/{{name}}/1.0" />{{/roles}}
    </NamedStreams>{{else}}
    <NamedStreams/>{{/if}}
