}}<PackageManifest version="2">
    <Encryption keytype="1"/>
    <Contents hashtype="1">{{#filesWithHash}}
        <Item name="{{name}}" hash="{{hashValue}}" uri="/{{name}}" />{{/filesWithHash}}
    </Contents>{{#unless root}}{{#if roles}}
    <SystemConfigurationSettings>{{#roles}}
        <Setting key="{{name}}Instances"/>{{/roles}}
