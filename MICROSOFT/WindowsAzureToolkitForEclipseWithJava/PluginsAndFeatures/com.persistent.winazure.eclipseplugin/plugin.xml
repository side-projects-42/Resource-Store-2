   <!-- Toolbar buttons -->
   <extension point="org.eclipse.ui.menus">
		<menuContribution allPopups="false"
		locationURI="toolbar:org.eclipse.ui.main.toolbar">
		<toolbar id="com.persistent.ui.toolbar"
		label="Azure Toolbar">
			<command
                   commandId="com.persistent.ui.toolbar.WARunEmulatorCmd"
                   icon="icons/RunEmulatorIcon.png"
                   label="Run in Azure Emulator"
                   tooltip="Run in Azure Emulator"
                   style="push">
                   <visibleWhen>
                       <test property="com.persistent.ui.property.isWindows"/>
                   </visibleWhen>
			</command>

			<command
                   commandId="com.persistent.ui.toolbar.WAResetEmulatorCmd"
                   icon="icons/ResetEmulatorIcon.png"
                   label="Reset Azure Emulator"
                   tooltip="Reset Azure Emulator"
                   style="push">
                   <visibleWhen>
                       <test property="com.persistent.ui.property.isWindows"/>
                   </visibleWhen>
			</command>

			<command
                   commandId="com.persistent.ui.toolbar.WABuildCloudCmd"
                   icon="icons/BuildToCloudIcon.png"
                   label="Build Cloud Package for Azure"
                   tooltip="Build Cloud Package for Azure"
                   style="push">
			</command>

			<command
				commandId="com.persistent.ui.toolbar.WANewProject"
				icon="icons/small/newCloudService.png"
                label="New Azure Deployment Project"
				tooltip="New Azure Deployment Project"
				style="push">
			</command>
			
			<command
                   commandId="com.gigaspaces.azure.commands.deploy"
                   icon="icons/publish.png"
                   label="Publish to Azure Cloud"
                   tooltip="Publish to Azure Cloud"
                   style="push">
			</command>
			
			<command
                   commandId="com.gigaspaces.azure.commands.undeploy"
                   icon="icons/unpublish.png"
                   label="Unpublish"
                   tooltip="Unpublish"
                   style="push">
			</command>
			
			<command
				commandId="com.persistent.ui.toolbar.WANewCertificate"
				icon="icons/small/newCert.png"
                label="New Self Signed Certificate"
				tooltip="New Self Signed Certificate"
				style="push">
			</command>
			
		</toolbar>
		</menuContribution>
	</extension>

   <!-- Handlers for commands -->
	<extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.persistent.ui.toolbar.WARunEmulator"
            commandId="com.persistent.ui.toolbar.WARunEmulatorCmd">
         <enabledWhen>
         <or>
			<with
				variable="selection">
				<count value="1"/>
				<iterate
					operator="or">
					<adapt type="org.eclipse.core.resources.IResource">
        				<test property="org.eclipse.core.resources.projectNature"
         				value="com.persistent.ui.projectnature"/>
            		</adapt>
				</iterate>
		    </with>
		  <and>
		    <with
              variable="activePart">
           		<instanceof
                  value="org.eclipse.ui.IEditorPart">
                 </instanceof>
            </with>
           <with
              variable="activePart">
              	<adapt type="org.eclipse.ui.IEditorPart">
           			<test property="com.persistent.ui.property.isProjFile">
          			</test>
          		</adapt>
          	</with>
          </and>
		 </or>
		</enabledWhen>
      </handler>

      <handler
            class="com.persistent.ui.toolbar.WAResetEmulator"
            commandId="com.persistent.ui.toolbar.WAResetEmulatorCmd">
      </handler>
      <handler
            class="com.persistent.ui.toolbar.WANewProject"
            commandId="com.persistent.ui.toolbar.WANewProject">
      </handler>
	 <handler
            class="com.persistent.ui.toolbar.WANewCertificate"
            commandId="com.persistent.ui.toolbar.WANewCertificate">
      </handler>

     
      <handler
            class="com.persistent.ui.toolbar.WABuildCloud"
            commandId="com.persistent.ui.toolbar.WABuildCloudCmd">
         <enabledWhen>
         <or>
      <with
        variable="selection">
        <count value="1"/>
        <iterate
          operator="or">
          <adapt type="org.eclipse.core.resources.IProject">
                <test property="com.persistent.ui.property.isFirstPackageWithAuto"/>
          </adapt>
        </iterate>
        </with>
       <and>
        <with
              variable="activePart">
           <instanceof
                  value="org.eclipse.ui.IEditorPart">
                  </instanceof>
               </with>
           <with
              variable="activePart">
              <adapt type="org.eclipse.ui.IEditorPart">
           		<test property="com.persistent.ui.property.isProjFileAndisFirstPackageWithAuto">
          		</test>
          	  </adapt>
          </with>
       </and>
      </or>
     </enabledWhen>
    </handler>
   </extension>
   
