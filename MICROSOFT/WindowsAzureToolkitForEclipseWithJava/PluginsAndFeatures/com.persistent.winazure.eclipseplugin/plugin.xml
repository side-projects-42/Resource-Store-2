 <!-- Property testers -->
  <extension point="org.eclipse.core.expressions.propertyTesters">
    <propertyTester
      id="com.persistent.ui.property.testRoleFolder"
      type="org.eclipse.core.resources.IFolder"
      namespace="com.persistent.ui.property"
      properties="isRoleFolder"
      class="com.persistent.util.WAPropertyTester">
    </propertyTester>
    <propertyTester
      id="com.persistent.ui.property.testRolePrefNode"
      type="java.lang.Object"
      namespace="com.persistent.ui.property"
      properties="isRolePrefNode"
      class="com.persistent.util.WAPropertyTester">
    </propertyTester>
    <propertyTester
      id="com.persistent.ui.property.testWebProj"
      type="org.eclipse.core.resources.IProject"
      namespace="com.persistent.ui.property"
      properties="isWebProj"
      class="com.persistent.util.WAPropertyTester">
    </propertyTester>
    <propertyTester
      id="com.persistent.ui.property.isWebOrAzureProj"
      type="org.eclipse.core.resources.IProject"
      namespace="com.persistent.ui.property"
      properties="isWebOrAzureProj"
      class="com.persistent.util.WAPropertyTester">
    </propertyTester>
    <propertyTester
      id="com.persistent.ui.property.testProjFile"
      type="org.eclipse.ui.IEditorPart"
      namespace="com.persistent.ui.property"
      properties="isProjFile"
      class="com.persistent.util.WAPropertyTester">
    </propertyTester>
    <propertyTester
      id="com.persistent.ui.property.testIsWindows"
      type="java.lang.Object"
      namespace="com.persistent.ui.property"
      properties="isWindows"
      class="com.persistent.util.WAPropertyTester">
    </propertyTester>
    <propertyTester
      id="com.persistent.ui.property.isFirstPackageWithAuto"
      type="org.eclipse.core.resources.IProject"
      namespace="com.persistent.ui.property"
      properties="isFirstPackageWithAuto"
      class="com.persistent.util.WAPropertyTester">
    </propertyTester>
    <propertyTester
      id="com.persistent.ui.property.isProjFileAndisFirstPackageWithAuto"
