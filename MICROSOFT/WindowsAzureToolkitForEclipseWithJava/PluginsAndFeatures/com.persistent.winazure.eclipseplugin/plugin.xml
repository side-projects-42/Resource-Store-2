           name="Azure Deployment Project"
          id="com.persistent.ui.projwizard.category">
         </category>
         <wizard
            name="Azure Deployment Project"
           category="com.persistent.ui.projwizard.category"
           icon="icons/small/newCloudService.png"
           project="true"
           class="com.persistent.ui.projwizard.WAProjectWizard"
           id="com.persistent.ui.projwizard.waprojectwizard">
        <description>New Azure Deployment Project</description>
         </wizard>
   </extension>
    <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <newWizardShortcut
